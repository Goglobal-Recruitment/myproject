<script>
const adults = document.getElementById('adults');
const children = document.getElementById('children');
const rooms = document.getElementById('rooms');
const childAgesContainer = document.getElementById('childAgesContainer');
const searchBtn = document.getElementById('searchBtn');

function renderChildAges() {
    childAgesContainer.innerHTML = '';
    const numChildren = parseInt(children.value);
    for(let i=1; i<=numChildren; i++){
        const select = document.createElement('select');
        select.innerHTML = '<option value="0">0</option>';
        for(let j=1; j<=17; j++){
            select.innerHTML += `<option value="${j}">${j} yrs</option>`;
        }
        select.style.padding = "8px";
        select.style.borderRadius = "4px";
        select.style.border = "1px solid #ccc";
        select.style.minWidth = "80px";
        select.id = `childAge${i}`;
        childAgesContainer.appendChild(select);
    }
}

children.addEventListener('change', renderChildAges);
searchBtn.addEventListener('click', () => {
    const totalPeople = parseInt(adults.value) + parseInt(children.value);
    if(totalPeople > rooms.value * 4){
        alert('Max 4 guests per room. Please adjust adults, children, or rooms.');
    } else {
        alert('Search submitted! (Implement backend next)');
    }
});

renderChildAges();
</script>

