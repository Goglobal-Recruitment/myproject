<!-- JavaScript for Dropdown Logic -->
<script>
const adults = document.getElementById('adults');
const children = document.getElementById('children');
const rooms = document.getElementById('rooms');

const searchBtn = document.getElementById('searchBtn');
searchBtn.addEventListener('click', () => {
    const totalPeople = parseInt(adults.value) + parseInt(children.value);
    if(totalPeople > rooms.value * 4){
        alert('Max 4 guests per room. Please adjust adults, children, or rooms.');
        return;
    }
    alert(`Searching for ${adults.value} adults, ${children.value} children in ${rooms.value} room(s).`);
});
</script>

